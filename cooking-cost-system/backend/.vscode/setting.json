{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },
  "editor.rulers": [80, 120],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",
  "files.encoding": "utf8",
  "files.associations": {
    "*.env*": "properties",
    "Dockerfile*": "dockerfile",
    "*.yml": "yaml",
    "*.yaml": "yaml"
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true,
    "**/.nyc_output": true,
    "**/logs": true,
    "**/uploads": true,
    "**/temp": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true,
    "**/logs": true,
    "**/uploads": true
  },
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "eslint.workingDirectories": ["backend"],
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "eslint.codeActionsOnSave.mode": "all",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on"
  },
  "[sql]": {
    "editor.defaultFormatter": "ms-mssql.mssql",
    "editor.formatOnSave": true
  },
  "emmet.includeLanguages": {
    "typescript": "html",
    "javascript": "html"
  },
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.cwd": "${workspaceFolder}/backend",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.d.ts, ${capture}.js.map",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
    ".eslintrc.*": ".eslintignore",
    ".prettierrc.*": ".prettierignore",
    "docker-compose.yml": "docker-compose.*.yml, Dockerfile*",
    ".env": ".env.*"
  },
  "debug.allowBreakpointsEverywhere": true,
  "debug.inlineValues": "auto",
  "testing.automaticallyOpenPeekView": "never",
  "jest.autoRun": {
    "watch": false,
    "onSave": "test-src-file"
  },
  "jest.showCoverageOnLoad": true,
  "rest-client.environmentVariables": {
    "local": {
      "baseUrl": "http://localhost:3001",
      "token": ""
    },
    "staging": {
      "baseUrl": "https://staging-api.example.com",
      "token": ""
    },
    "production": {
      "baseUrl": "https://api.example.com",
      "token": ""
    }
  }
}
