# API設定
VITE_API_URL=http://localhost:3001/api

# アプリケーション設定
VITE_APP_NAME=料理原価計算システム
VITE_APP_VERSION=2.0.0
VITE_APP_DESCRIPTION=料理の原価を効率的に計算・管理するシステム

# 環境設定
VITE_NODE_ENV=development

# デバッグ設定
VITE_DEBUG=false
VITE_ENABLE_DEVTOOLS=true

# PWA設定
VITE_PWA_ENABLED=true

# 外部サービス設定（必要に応じて）
# VITE_GOOGLE_ANALYTICS_ID=
# VITE_SENTRY_DSN=

# 機能フラグ
VITE_ENABLE_AUTH=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_ADVANCED_SEARCH=true

# パフォーマンス設定
VITE_API_TIMEOUT=30000
VITE_REQUEST_RETRY_COUNT=3
VITE_CACHE_TIME=600000

# ファイルアップロード設定
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv
