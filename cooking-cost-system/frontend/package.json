{
    "_comment": "cooking-cost-system/backend/package.json",
    "name": "cooking-cost-backend",
    "version": "2.0.0",
    "description": "料理原価計算システム バックエンドAPI",
    "main": "dist/server.js",
    "scripts": {
      "start": "node dist/server.js",
      "dev": "nodemon --exec ts-node src/server.ts",
      "build": "tsc",
      "build:watch": "tsc --watch",
      "clean": "rimraf dist",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:coverage": "jest --coverage",
      "lint": "eslint src/**/*.ts",
      "lint:fix": "eslint src/**/*.ts --fix",
      "format": "prettier --write src/**/*.ts",
      "typecheck": "tsc --noEmit",
      "docs": "typedoc src --out docs --exclude '**/*.test.ts'",
      "db:migrate": "ts-node src/scripts/migrate.ts",
      "db:seed": "ts-node src/scripts/seed.ts",
      "db:reset": "ts-node src/scripts/reset.ts"
    },
    "keywords": [
      "cooking",
      "cost",
      "calculator",
      "restaurant",
      "food",
      "management"
    ],
    "author": "Cooking Cost System Team",
    "license": "MIT",
    "dependencies": {
      "express": "^4.18.2",
      "mysql2": "^3.6.5",
      "cors": "^2.8.5",
      "helmet": "^7.1.0",
      "compression": "^1.7.4",
      "express-rate-limit": "^7.1.5",
      "express-validator": "^7.0.1",
      "multer": "^1.4.5-lts.1",
      "morgan": "^1.10.0",
      "winston": "^3.11.0",
      "dotenv": "^16.3.1",
      "bcryptjs": "^2.4.3",
      "jsonwebtoken": "^9.0.2",
      "joi": "^17.11.0",
      "moment": "^2.29.4",
      "lodash": "^4.17.21",
      "uuid": "^9.0.1",
      "nodemailer": "^6.9.8",
      "redis": "^4.6.11",
      "swagger-ui-express": "^5.0.0",
      "swagger-jsdoc": "^6.2.8"
    },
    "devDependencies": {
      "@types/express": "^4.17.21",
      "@types/cors": "^2.8.17",
      "@types/compression": "^1.7.5",
      "@types/multer": "^1.4.11",
      "@types/morgan": "^1.9.9",
      "@types/bcryptjs": "^2.4.6",
      "@types/jsonwebtoken": "^9.0.5",
      "@types/lodash": "^4.14.202",
      "@types/uuid": "^9.0.7",
      "@types/nodemailer": "^6.4.14",
      "@types/swagger-ui-express": "^4.1.6",
      "@types/swagger-jsdoc": "^6.0.4",
      "@types/node": "^20.10.5",
      "@types/jest": "^29.5.8",
      "@types/supertest": "^2.0.16",
      "typescript": "^5.3.3",
      "ts-node": "^10.9.2",
      "nodemon": "^3.0.2",
      "jest": "^29.7.0",
      "ts-jest": "^29.1.1",
      "supertest": "^6.3.3",
      "eslint": "^8.56.0",
      "@typescript-eslint/eslint-plugin": "^6.15.0",
      "@typescript-eslint/parser": "^6.15.0",
      "prettier": "^3.1.1",
      "rimraf": "^5.0.5",
      "typedoc": "^0.25.4"
    },
    "engines": {
      "node": ">=18.0.0",
      "npm": ">=9.0.0"
    },
    "jest": {
      "preset": "ts-jest",
      "testEnvironment": "node",
      "collectCoverageFrom": [
        "src/**/*.ts",
        "!src/**/*.test.ts",
        "!src/scripts/**"
      ],
      "testMatch": [
        "**/__tests__/**/*.ts",
        "**/?(*.)+(spec|test).ts"
      ]
    },
    "nodemonConfig": {
      "ignore": [
        "dist/",
        "node_modules/",
        "logs/"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    }
  }